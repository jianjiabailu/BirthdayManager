/* miniprogram/pages/alter/alter.wxss */

.container{
  padding: 1rem;
}
.input-box{
  color: #333;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border-radius: 5px;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: 0px 4px 6px 2px rgba(144, 143, 142, 0.2);
}
.input-box switch{
  transform: scale(0.8);
}
.input-box .input-item{
  flex: 1;
  height: 100%;
}
.input-item input{
  height: 100%;
}

.btn-group{
  z-index: 9;
  position: fixed;
  left: 0; bottom: 0;
  width: 100%; 
}

.btn-item{
  height: 3rem;
  line-height: 3rem;
  text-align: center;
  background-color: white;
  box-shadow: 0 2px 4px 2px rgba(255, 168, 0, .5)
}
