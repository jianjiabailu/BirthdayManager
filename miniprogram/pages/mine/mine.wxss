/* miniprogram/pages/mine/mine.wxss */

.userinfo, .signature, .birthCard, .infoList{
  padding: .5rem 1rem;
}
.header{
  width: 100%;
  height: 150px;
  position: relative;
}

.header .camera{
  width: 2rem;
  height: 2rem;
  position: absolute;
  left: 1rem; top: .5rem;
  border-radius: 4px;
  background-color: rgba(255, 255, 255, .5)
}
.header .background{
  width: 100%;
  height: 100%;
}

.userinfo{
  font-size: 14px;
  text-align: center;
}

.zodiac image{
  width: 4rem;
  height: 4rem;
}

.avatar{
  width: 4rem;
  height: 4rem;
  margin: 0 auto;
  background-size: 100% 100%;
  position: relative;
  bottom: 2rem;
}

/* 名称 */
.nickName{
  position: relative;
  bottom: 2rem;
}
/* 生日 */
.birthday{
  font-size: 14px;
  position: relative;
  bottom: 2rem;
}
/* 个性签名 */
.signature{
  color: #999999;
  font-size: 14px;
}

/* 信息列表 */

.infoList .tit{
  font-size: 14px;
}
.infoList .form-item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
}

.card{
  font-size: 14px;
  padding: .5rem 1rem;
  margin: 0 auto;
  border-radius: 2px;
  background-color: #ec5ce54f;
  background-image: url(http://api.sanhulaojie.cn/public/images/bg-2.gif);
}
.card > view{
  margin: 1rem 0;
}
.card .days{
  font-size: 21px;
}
.card .lunar{
  font-size: 12px;
  padding: 0 .2rem;
  margin-left: .5rem;
  border-radius: 2px;
  border: 1px solid #fcfcfcfc;
}

.lunisolar>text{
  display: inline-block;
}